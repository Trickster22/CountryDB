@{
    Layout = null;
}






<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width-device-width" />
    <title>AddCountry</title>
</head>
<body>
    @using (Html.BeginForm("AddCountry", "Country", FormMethod.Post))
    {
        <label>Название страны: </label>
        <input id="Name" type="text" name="Name" /><br /><br /><br />

        <label>Материк: </label>
        <input id="Mainland" type="text" name="Mainland" /><br /><br /><br />

        <label>Площадь: </label>
        <input id="Area" type="text" name="Area" /><br /><br /><br />

        <label>Религия: </label>
        <input id="FaithName" type="text" name="FaithName" /><br /><br /><br />

        <label>Форма правления: </label>
        <input id="PolityName" type="text" name="PolityName" /><br /><br /><br />


        <input type="submit" value="Добавить новую страну" />
    }
    <div>
        <a href="@Url.Action("HomePage","Home")">на главную</a> <a href="@Url.Action("ShowCountry","Country")">к списку</a>
    </div>
</body>
</html>


